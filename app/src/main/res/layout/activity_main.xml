<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3A3939"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expression"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:ellipsize="end"
        android:text=""
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_clear"
            style="@style/Operators_Button"
            android:text="C"/>

        <TextView
            android:id="@+id/bt_division"
            style="@style/Operators_Button"
            android:text="/"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/number_seven"
            style="@style/Numbers_Button"
            android:text="7"/>
        <TextView
            android:id="@+id/number_eight"
            style="@style/Numbers_Button"
            android:text="8"/>
        <TextView
            android:id="@+id/number_nine"
            style="@style/Numbers_Button"
            android:text="9"/>
        <TextView
            android:id="@+id/bt_mutiplication"
            style="@style/Numbers_Button"
            android:text="x"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/number_four"
            style="@style/Numbers_Button"
            android:text="4"/>
        <TextView
            android:id="@+id/number_five"
            style="@style/Numbers_Button"
            android:text="5"/>
        <TextView
            android:id="@+id/number_six"
            style="@style/Numbers_Button"
            android:text="6"/>
        <TextView
            android:id="@+id/bt_subtration"
            style="@style/Numbers_Button"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/number_one"
            style="@style/Numbers_Button"
            android:text="1"/>
        <TextView
            android:id="@+id/number_two"
            style="@style/Numbers_Button"
            android:text="2"/>
        <TextView
            android:id="@+id/number_three"
            style="@style/Numbers_Button"
            android:text="3"/>
        <TextView
            android:id="@+id/bt_addition"
            style="@style/Numbers_Button"
            android:text="+"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/bt_point"
            style="@style/Numbers_Button"
            android:text="."/>
        <TextView
            android:id="@+id/number_zero"
            style="@style/Numbers_Button"
            android:text="0"/>
        <ImageView
            android:id="@+id/bt_backspace"
            style="@style/Numbers_Button"
            android:background="@color/white"
            android:src="@drawable/backspace"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/bt_equal"
            style="@style/Numbers_Button"
            android:text="="/>

    </LinearLayout>


</LinearLayout>
